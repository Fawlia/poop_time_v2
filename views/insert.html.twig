                <div class="form-group">
                    <label for="lat"></label>
					<input type="hidden" name="lat" value="" class="form-control" id="lat">
                </div>
            </div>

            <div class="">
                <div class="form-group">
                    <label for="lng"></label>
                    <input type="hidden" name="lng" value="" class="form-control" id="lng">
                </div>
            </div>

            <div class="col s12">
                <div class="form-group">
                    <label for="pseudo">Votre pseudo</label>
